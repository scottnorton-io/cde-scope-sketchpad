# Dockerfile.web
FROM python:3.12-slim

WORKDIR /app

ENV PYTHONUNBUFFERED=1 PIP_DISABLE_PIP_VERSION_CHECK=on

RUN pip install --no-cache-dir fastapi uvicorn[standard] jinja2 httpx

COPY scope_web ./scope_web
COPY sessions ./sessions

EXPOSE 8080

CMD ["uvicorn", "scope_web.app:app", "--host", "0.0.0.0", "--port", "8080"]
